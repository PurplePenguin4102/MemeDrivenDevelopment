<div class="row">
    <div class="col-lg-4">
    </div>
    <div class="col-lg-8 dusty">
        <h1 class="body-header">Posts</h1>
        <%= link_to("new post", [:new, :admin, :post], class: "btn btn-primary") %>
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th scope="col">PostNum</th>
                    <th scope="col">Published Date</th>
                    <th scope="col">Is Published</th>
                    <th scope="col">Title</th>
                    <th scope="col">Subtitle</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @posts.each do |post| %>
                <tr>
                    <td><%= post.id %></td>
                    <td><%= post.publish_date %></td>
                    <td><%= post.published? %></td>
                    <td><%= post.title %></td>
                    <td><%= post.subtitle %></td>
                    <td><%= link_to("edit", [:edit, :admin, post], class: "btn btn-success") %> <%= link_to("KILL", [:admin, post], method: :delete, data: { confirm: "Are you sure you want to remove this post?" }, class: "btn btn-warning") %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
    </div>
</div>
